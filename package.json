{
  "name": "root",
  "repository": "https://github.com/deepkit/deepkit-framework",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "AGPL-3.0-only",
  "scripts": {
    "test": "jest --coverage --forceExit",
    "bootstrap": "lerna bootstrap --no-ci",
    "tsc": "tsc --build",
    "tsc-watch": "tsc --build --watch",
    "clean": "rm -rf packages/*/dist",
    "clean-modules": "rm -rf packages/*/node_modules",
    "docs": "rm -rf docs && typedoc",
    "publish": "npm run tsc && lerna publish --no-private",
    "publish-force": "npm run tsc && lerna publish --no-private --force-publish",
    "publish-website": "heroku container:push web && heroku container:release web"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node": "^12.12.6",
    "coveralls": "^3.0.3",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "lerna": "^3.22.1",
    "ts-jest": "^26.4.3",
    "typescript": "^4.1.1-rc",
    "typedoc": "^0.16.8",
    "typedoc-plugin-lerna-packages": "^0.3.0"
  },
  "engines": {
    "node": ">= 8.9.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "packages/*/dist"
    ],
    "projects": [
      "packages/core",
      "packages/core-rxjs",
      "packages/type",
      "packages/orm",
      "packages/orm-integration",
      "packages/bson",
      "packages/mongo",
      "packages/sql",
      "packages/framework-integration",
      "packages/framework",
      "packages/framework-shared",
      "packages/topsort"
    ]
  }
}
