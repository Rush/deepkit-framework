{
  "name": "@deepkit/orm-integration",
  "version": "1.0.1-alpha.0",
  "description": "deepkit/type ORM integration tests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "private": true,
  "scripts": {
    "test": "ADAPTER_DRIVER=sqlite jest --forceExit; ADAPTER_DRIVER=mongo jest --forceExit; ADAPTER_DRIVER=mysql jest --forceExit; ADAPTER_DRIVER=postgres jest --forceExit;",
    "tsc": "tsc",
    "tsc-watch": "rm -rf dist && tsc --watch"
  },
  "repository": "https://github.com/deepkit/deepkit-framework",
  "author": "Marc J. Schmidt <marc@marcjschmidt.de>",
  "license": "AGPL-3.0-only",
  "dependencies": {
    "@deepkit/core": "^1.0.1-alpha.0",
    "@deepkit/type": "^1.0.1-alpha.0",
    "@deepkit/mongo": "^1.0.1-alpha.0",
    "@deepkit/orm": "^1.0.1-alpha.0",
    "@deepkit/sql": "^1.0.1-alpha.0",
    "better-sqlite3": "^7.1.1",
    "mariadb": "^2.4.2",
    "postgres": "^2.0.0-beta.0"
  },
  "devDependencies": {
    "reflect-metadata": "^0.1.13",
    "jest-serial-runner": "^1.1.0"
  },
  "jest": {
    "runner": "jest-serial-runner",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.spec.ts"
    ]
  }
}
